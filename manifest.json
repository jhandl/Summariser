{
  "manifest_version": 3,
  "name": "AI Summarizer",
  "version": "1.0.0",
  "description": "Summarize the current page using Chrome's Summarizer API.",
  "permissions": ["scripting", "activeTab"],
  "action": {
    "default_title": "Summarize this page"
  },
  "icons": {
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}

